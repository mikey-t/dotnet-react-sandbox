{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "swigfile.ts",
    "swigHelpers.ts"
  ],
  "exclude": [
    ".vscode",
    "build",
    "cert",
    "docker",
    "docs",
    "node_modules",
    "release",
    "src"
  ]
}
